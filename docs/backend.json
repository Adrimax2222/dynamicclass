{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "center": { "type": "string" },
        "ageRange": { "type": "string" },
        "course": { "type": "string" },
        "className": { "type": "string" },
        "role": { "type": "string", "enum": ["student", "teacher", "admin"] },
        "avatar": { "type": "string", "format": "uri" },
        "trophies": { "type": "number" },
        "tasks": { "type": "number" },
        "exams": { "type": "number" },
        "pending": { "type": "number" },
        "activities": { "type": "number" },
        "organizationId": { "type": "string" },
        "isNewUser": { "type": "boolean" },
        "fcmToken": { "type": "string", "description": "Firebase Cloud Messaging token for push notifications." }
      },
      "required": ["uid", "name", "email", "role", "avatar", "course", "className", "center", "ageRange", "isNewUser"]
    },
    "Note": {
      "title": "Note",
      "description": "Represents a user's personal note.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "content", "createdAt"]
    },
    "Announcement": {
      "title": "Announcement",
      "description": "Represents a global announcement for all users.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorAvatar": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" },
        "scope": { "type": "string", "enum": ["general", "center"] }
      },
      "required": ["text", "authorId", "authorName", "authorAvatar", "createdAt", "scope"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/notes/{noteId}": {
      "schema": { "$ref": "#/entities/Note" },
      "description": "Stores personal notes for each user."
    },
    "/announcements/{announcementId}": {
        "schema": { "$ref": "#/entities/Announcement" },
        "description": "Stores global announcements for all users."
    }
  }
}
