
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "center": { "type": "string" },
        "ageRange": { "type": "string" },
        "course": { "type": "string" },
        "className": { "type": "string" },
        "role": { "type": "string", "description": "Can be 'student', 'teacher', 'admin', 'center-admin', or a dynamic role like 'admin-4ESO-B'." },
        "avatar": { "type": "string", "format": "uri" },
        "trophies": { "type": "number" },
        "tasks": { "type": "number" },
        "exams": { "type": "number" },
        "pending": { "type": "number" },
        "activities": { "type": "number" },
        "organizationId": { "type": "string" },
        "isNewUser": { "type": "boolean" },
        "studyMinutes": { "type": "number" },
        "streak": { "type": "number" },
        "lastStudyDay": { "type": "string", "format": "date" },
        "ownedAvatars": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["uid", "name", "email", "role", "avatar", "course", "className", "center", "ageRange", "isNewUser"]
    },
    "UserToken": {
      "title": "User Token",
      "description": "Stores a user's Firebase Cloud Messaging (FCM) token for push notifications.",
      "type": "object",
      "properties": {
        "token": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["token", "updatedAt"]
    },
    "Note": {
      "title": "Note",
      "description": "Represents a user's personal note.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "content", "createdAt"]
    },
    "Announcement": {
      "title": "Announcement",
      "description": "Represents a global announcement for all users.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorAvatar": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" },
        "scope": { "type": "string", "enum": ["general", "center", "class"] },
        "centerId": { "type": "string" },
        "className": { "type": "string" },
        "likedBy": { "type": "array", "items": { "type": "string" } },
        "likes": { "type": "number" },
        "isPinned": { "type": "boolean" },
        "viewedBy": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["text", "authorId", "authorName", "authorAvatar", "createdAt", "scope"]
    },
    "Chat": {
      "title": "Chat",
      "description": "Represents a single chat conversation session.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" }
      },
      "required": ["title", "createdAt", "userId"]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "Represents a single message within a chat conversation.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "role": { "type": "string", "enum": ["user", "assistant", "system"] },
        "content": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["role", "content", "timestamp"]
    },
    "CompletedItem": {
      "title": "Completed Item",
      "description": "Represents a task or exam that a user has completed.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["task", "exam"] },
        "completedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "type", "completedAt"]
    },
    "Center": {
      "title": "Center",
      "description": "Represents an educational center or organization.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "classes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "icalUrl": { "type": "string", "format": "uri" },
              "schedule": {
                "type": "object",
                "properties": {
                  "Lunes": { "$ref": "#/entities/ScheduleDay" },
                  "Martes": { "$ref": "#/entities/ScheduleDay" },
                  "Mi√©rcoles": { "$ref": "#/entities/ScheduleDay" },
                  "Jueves": { "$ref": "#/entities/ScheduleDay" },
                  "Viernes": { "$ref": "#/entities/ScheduleDay" }
                }
              }
            },
            "required": ["name"]
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "code", "createdAt"]
    },
    "ScheduleDay": {
      "title": "Schedule Day",
      "description": "Represents the schedule for a single day of the week.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "subject": { "type": "string" },
          "time": { "type": "string" },
          "teacher": { "type": "string" },
          "room": { "type": "string" },
          "details": { "type": "string" }
        },
        "required": ["id", "subject", "time", "teacher", "room"]
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/notes/{noteId}": {
      "schema": { "$ref": "#/entities/Note" },
      "description": "Stores personal notes for each user."
    },
    "/users/{userId}/chats/{chatId}": {
      "schema": { "$ref": "#/entities/Chat" },
      "description": "Stores a user's chat sessions."
    },
    "/users/{userId}/chats/{chatId}/messages/{messageId}": {
      "schema": { "$ref": "#/entities/ChatMessage" },
      "description": "Stores messages for a specific chat session."
    },
    "/users/{userId}/completedItems/{itemId}": {
      "schema": { "$ref": "#/entities/CompletedItem" },
      "description": "Stores a history of tasks and exams completed by the user."
    },
    "/announcements/{announcementId}": {
        "schema": { "$ref": "#/entities/Announcement" },
        "description": "Stores global announcements for all users."
    },
    "/userTokens/{userId}": {
      "schema": { "$ref": "#/entities/UserToken" },
      "description": "Stores the FCM token for a specific user."
    },
    "/centers/{centerId}": {
      "schema": { "$ref": "#/entities/Center" },
      "description": "Stores information about educational centers."
    }
  }
}
